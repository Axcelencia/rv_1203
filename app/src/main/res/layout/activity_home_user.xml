<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_cielito"
    tools:context=".Home_user">

    <TextView
        android:id="@+id/txt_bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:text="Bienvenido"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/home_icon_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="135dp"
        android:contentDescription="menu hamburguesa"
        android:contextClickable="true"
        android:src="@drawable/menu_lines_lightblue"
        app:layout_constraintStart_toEndOf="@id/txt_bienvenida"
        app:layout_constraintTop_toTopOf="@+id/txt_bienvenida" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/home_icon_add"
        android:src="@drawable/add_lightblue"
        android:contextClickable="true"
        android:contentDescription="icono para abrir 'menu agregar'"
        app:layout_constraintStart_toStartOf="@+id/home_icon_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/home_icon_regs"
        android:src="@drawable/folder_lightblue"
        android:contextClickable="true"
        android:contentDescription="icono para abrir 'menu registros'"
        app:layout_constraintStart_toStartOf="@+id/home_icon_add"
        app:layout_constraintBottom_toTopOf="@+id/home_icon_add"
        android:layout_marginBottom="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>