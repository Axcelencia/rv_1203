<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/azul_cielito"
    tools:context="com.example.MenuCrearReportes">

    <TextView
        android:id="@+id/titulo_menu_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/titulo_menu_reportes"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="@color/lightblue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icono_invisible"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="110dp"
        android:contentDescription="menu hamburguesa"
        android:contextClickable="true"
        app:layout_constraintStart_toEndOf="@id/titulo_menu_reps"
        app:layout_constraintTop_toTopOf="@+id/titulo_menu_reps" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_perdido"
        android:text="@string/perdido"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/lightblue"
        app:layout_constraintStart_toStartOf="@id/titulo_menu_reps"
        app:layout_constraintTop_toBottomOf="@id/titulo_menu_reps"
        android:layout_marginTop="40sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_encontrado"
        android:text="@string/encontrado"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/lightblue"
        app:layout_constraintStart_toStartOf="@id/titulo_menu_reps"
        app:layout_constraintTop_toBottomOf="@id/btn_perdido"
        android:layout_marginTop="30sp"
        />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/c_rep_icon_back"
        android:src="@drawable/arrow_direction_left_back_lightblue"
        android:contentDescription="volver"
        app:layout_constraintStart_toStartOf="@id/icono_invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>