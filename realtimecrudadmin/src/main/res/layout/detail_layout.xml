<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/detail_view"
    card_view:cardBackgroundColor="@color/gris"
    card_view:cardCornerRadius="15dp"
    card_view:contentPadding="4dp"
    card_view:cardElevation="6dp"
    android:layout_margin="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_titulo"
            android:text="Objeto Perdido"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginStart="18sp"/>

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_nombre"
            android:text="Objeto"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/detail_image"
            android:paddingTop="10sp"
            android:layout_marginStart="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_fecha"
            android:text="Fecha"
            android:textSize="20sp"
            android:layout_below="@id/detail_nombre"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="3sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_lugar"
            android:text="Lugar"
            android:textSize="20sp"
            android:layout_below="@id/detail_fecha"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="3sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_details"
            android:text="Detalles"
            android:textSize="20sp"
            android:layout_below="@id/detail_lugar"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="5sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_username"
            android:text="Nombre de usuario"
            android:textSize="20sp"
            android:layout_below="@id/detail_details"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="2sp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>